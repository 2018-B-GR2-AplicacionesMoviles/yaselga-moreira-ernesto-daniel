<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relative_layout_so"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

  <TextView
      android:id="@+id/txt_padre_id"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentTop="true"
      android:layout_marginTop="10dp"
      android:layout_alignParentLeft="true"
      android:layout_marginLeft="20dp" />

  <TextView
      android:id="@+id/txt_nombre_padre"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignTop="@+id/txt_padre_id"
      android:layout_alignBottom="@+id/txt_padre_id"
      android:layout_marginLeft="75dp"
      android:layout_marginTop="0dp"
      android:layout_marginBottom="0dp"
      android:layout_toRightOf="@+id/txt_padre_id"
      android:textSize="20sp" />

  <TextView
      android:id="@+id/txt_apellido_padre"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignTop="@+id/txt_nombre_padre"
      android:layout_alignBottom="@+id/txt_nombre_padre"
      android:layout_marginLeft="75dp"
      android:layout_marginTop="0dp"
      android:layout_marginBottom="0dp"
      android:layout_toEndOf="@+id/txt_nombre_padre"
      android:layout_toRightOf="@+id/txt_nombre_padre" />

    <Button
        android:id="@+id/btn_opciones"
        android:layout_width="109dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="0dp"
        android:layout_marginRight="0dp" />

</RelativeLayout>