<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GaleriaActivity">

    <ImageView
        android:id="@+id/img_camisa"
        android:layout_width="200"
        android:layout_height="200"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/camisa" />

    <ImageView
        android:id="@+id/img_pantalon"
        android:layout_width="200"
        android:layout_height="200"
        app:layout_constraintEnd_toEndOf="@+id/img_camisa"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/img_camisa"
        app:layout_constraintTop_toBottomOf="@+id/img_camisa"
        app:srcCompat="@drawable/pantalon" />

    <ImageView
        android:id="@+id/img_terno"
        android:layout_width="200"
        android:layout_height="200"
        app:layout_constraintEnd_toEndOf="@+id/img_pantalon"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/img_pantalon"
        app:layout_constraintTop_toBottomOf="@+id/img_pantalon"
        app:srcCompat="@drawable/terno" />
</android.support.constraint.ConstraintLayout>